<section>

    <!-- renders the user recipe -->
    <h3 class="font-extrabold text-5xl">{{recipe.name}}</h3>

    <div class="flex flex-row">
        <div class="flex flex-col">
            <p class="my-10">{{recipe.description}}</p>
        </div>
        <div>
            <img src="{{recipe.category.image}}" alt="image of {{recipe.category.name}}"/>
        </div>
    </div>

    <!-- renders the user ingredients of recipe -->
    <div class="mb-10">
        <ul class="font-extrabold text-xl list-disc" id="ingredients">Ingredients: </ul>
        <p class="hidden"  value="1" id="totalIngs">{{recipe.instructions}}</p>
    </div>

    <!-- renders the user instructions of recipe -->
    <div class="mb-10">
        <ul class="font-extrabold text-xl list-disc" id="steps">Instructions: </ul>
        <p class="hidden" value="1" id="totalSteps"></p>
    </div>

    <div>
        <div id="reviewHeader">
            <h2>Rate this Recipe!</h2>
        </div>
        
        <!-- if user is logged in able to see recipes on profile page -->
        {{#if logged_in}}                            
        <button class="bg-lime-300 border-2 border-black border-single rounded-md" onclick="addReview()" id="addReview">Add a Review</button>            
        {{/if}}
        <div id="allReviews">
        {{#each recipe.reviews as |review|}}
        {{> reviews-details}}
        {{/each}}
        </div>
    </div>


</section>

<script src="/js/recipeScript.js"></script>

