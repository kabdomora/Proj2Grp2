<div class="flex flex-row justify-between">
  <div class="m-5 basis-1/2 w-1/2 p-1 border-4 bord rounded-md text-black border-yellow-200 border-single rounded-md bg-yellow-200">
    <h2>Login</h2>
    <form class="w-full login-form">
      <div class="block w-full my-0.5 flex-row">
        <label class="inline-block mt-0.5 mb-1 ml-1.5 text-xl" for="email-login">Email:</label>
        <input class="block border-2 border-black border-single rounded-md" type="text" id="email-login" />
      </div>
      <div class="block w-full my-0.5 flex-row">
        <label class="inline-block mt-0.5 mb-1 ml-1.5 text-xl" for="password-login">Password:</label>
        <input class="block border-2 border-black border-single rounded-md" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="text-center inline-block py-2 px-5 text-base rounded-md border border-solid border-transparent text-black bg-teal-300 transition-colors duration-200 ease-in-out" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="m-5 basis-1/2 w-1/2 p-1 border-4 border rounded-md text-black border-yellow-200 border-single rounded-md bg-yellow-200">
    <h2>Signup</h2>
    <form class="w-full signup-form">
      <div class="block w-full my-0.5 flex-row">
        <label class="inline-block mt-0.5 mb-1 ml-1.5 text-xl" for="username-signup">Username:</label>
        <input class="block border-2 border-black border-single rounded-md" type="text" id="username-signup" />
      </div>
      <div class="block w-full my-0.5 flex-row">
        <label class="inline-block mt-0.5 mb-1 ml-1.5 text-xl" for="email-signup">Email:</label>
        <input class="block border-2 border-black border-single rounded-md" type="text" id="email-signup" />
      </div>
      <div class="block w-full my-0.5 flex-row">
        <label class="inline-block mt-0.5 mb-1 ml-1.5 text-xl" for="password-signup">Password:</label>
        <input class="block border-2 border-black border-single rounded-md" type="password" id="password-signup" />
      </div>
      <div class="block w-full my-0.5">
        <button class="text-center inline-block py-2 px-5 text-base rounded-md border border-solid border-transparent text-black bg-teal-300 transition-colors duration-200 ease-in-out" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

