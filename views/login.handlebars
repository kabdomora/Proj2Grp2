<div id="login" class="flex flex-row justify-around p-5">
  <div class="p-5 bg-yellow-200 rounded-md shadow-lg">
    <h2 class="text-2xl font-bold">Login</h2>
    <form class="w-full login-form">
      <div class="block w-full my-2 flex-row">
        <label class="inline-block text-xl font-medium mr-2" for="email-login">Email:</label>
        <input class="border-2 border-black w-full rounded-md p-2" type="text" id="email-login" />
      </div>
      <div class="block w-full my-2 flex-row">
        <label class="inline-block text-xl font-medium mr-2" for="password-login">Password:</label>
        <input class="border-2 border-black w-full rounded-md p-2" type="password" id="password-login" />
      </div>
      <div class="my-2 flex-row">
        <button class="w-1/3 py-2 px-5 bg-lime-300 rounded-md hover:bg-lime-400 transition-colors duration-200 ease-in-out font-medium shadow-lg" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="p-5 bg-yellow-200 rounded-md shadow-lg">
    <h2 class="text-2xl font-bold">Signup</h2>
    <form class="w-full signup-form">
      <div class="block w-full my-2 flex-row">
        <label class="inline-block text-xl font-medium mr-2" for="username-signup">Username:</label>
        <input class="border-2 border-black w-full rounded-md p-2" type="text" id="username-signup" />
      </div>
      <div class="block w-full my-2 flex-row">
        <label class="inline-block text-xl font-medium mr-2" for="email-signup">Email:</label>
        <input class="border-2 border-black w-full rounded-md p-2" type="text" id="email-signup" />
      </div>
      <div class="block w-full my-2 flex-row">
        <label class="inline-block text-xl font-medium mr-2" for="password-signup">Password:</label>
        <input class="border-2 border-black w-full rounded-md p-2" type="password" id="password-signup" />
      </div>
      <div class="my-2 flex-row">
        <button class="w-1/3 py-2 px-5 bg-lime-300 rounded-md hover:bg-lime-400 transition-colors duration-200 ease-in-out font-medium shadow-lg" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

